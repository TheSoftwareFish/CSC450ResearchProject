import time
import tracemalloc
import re
def partition(arr, low, high):

    pivot = arr[high]

    i = low - 1
    
   
    for j in range(low, high):
        if arr[j] < pivot:
            i += 1
            swap(arr, i, j)
    
    
    swap(arr, i + 1, high)
    return i + 1


def swap(arr, i, j):
    arr[i], arr[j] = arr[j], arr[i]


def quickSort(arr, low, high):
    if low < high:

        pi = partition(arr, low, high)

        quickSort(arr, low, pi - 1)
        quickSort(arr, pi + 1, high)

def read_file(fileName):
    with open(fileName, "r") as f:
        data = f.read()

    postsplit = re.split(r"[, \n\t\r]+", data.strip())

    return [int(x) for x in postsplit if x != ""]



# Driver code
if __name__ == "__main__":
    filename = "arraythousand.txt"
    arr = read_file(filename)
    tracemalloc.start()
    timeStart = time.perf_counter()
    quickSort(arr, 0, len(arr) - 1)
    timeEnd = time.perf_counter()
    memUsed = tracemalloc.get_traced_memory()
    tracemalloc.stop()
    timeTotal = timeEnd - timeStart
    print(f"Execution Time: {timeTotal} seconds")
    print(f"Memory Used: {memUsed} b")